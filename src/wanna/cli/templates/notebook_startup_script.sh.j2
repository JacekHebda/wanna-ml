#!/bin/bash

{% for bucket_mount in bucket_mounts %}
sudo su -c "mkdir -p {{ bucket_mount["local_path"] }}" -s /bin/sh jupyter
sudo su -c "gcsfuse --implicit-dirs {{ ('--only-dir=' ~ bucket_mount["bucket_dir"]) if bucket_mount["bucket_dir"] }} {{ bucket_mount["bucket_name"] }} {{ bucket_mount["local_path"] }}" -s /bin/sh jupyter
{% endfor %}
